<header class="md:flex p-2 mb-4 justify-between items-end">
    <h1 class="font-serif font-bold text-2xl text-center md:text-left mb-4 md:mb-0">
        <a class="hover:underline" href="/">{{ this.title }}</a>
    </h1>
    <nav>
        <ul class="flex justify-center gap-4 text-lg font-serif font-bold">
            {% for item in this.navigationItems %}
                <li><a class="hover:underline" href="{{ path(item.route) }}" data-turbo-preload>{{ item.label }}</a></li>
            {% endfor %}
        </ul>
    </nav>
</header>
