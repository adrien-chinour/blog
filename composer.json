{
    "name": "adrien-chinour/blog",
    "description": "Blog system for udfn.fr",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-opentelemetry": "*",
        "league/commonmark": "2.7.*",
        "meilisearch/meilisearch-php": "^1.10",
        "monolog/monolog": "^3.5",
        "nyholm/psr7": "^1.0",
        "open-telemetry/exporter-otlp": "^1.3",
        "open-telemetry/opentelemetry-auto-symfony": "^1.1",
        "open-telemetry/sdk": "^1.10",
        "psr/log": "^3.0",
        "runtime/frankenphp-symfony": "^0.2.0",
        "sentry/sentry-symfony": "^5.8",
        "symfony/config": "7.4.*",
        "symfony/console": "7.4.*",
        "symfony/dotenv": "7.4.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.4.*",
        "symfony/http-client": "7.4.*",
        "symfony/lock": "7.4.*",
        "symfony/messenger": "7.4.*",
        "symfony/monolog-bundle": "^4.0",
        "symfony/property-access": "7.4.*",
        "symfony/rate-limiter": "7.4.*",
        "symfony/runtime": "7.4.*",
        "symfony/security-bundle": "7.4.*",
        "symfony/serializer": "7.4.*",
        "symfony/string": "7.4.*",
        "symfony/twig-bundle": "7.4.*",
        "symfony/validator": "7.4.*",
        "symfony/web-link": "7.4.*",
        "symfony/webhook": "7.4.*",
        "symfony/yaml": "7.4.*",
        "tempest/highlight": "^2.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.8",
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6",
        "phparkitect/phparkitect": "^0.7",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/phpunit-bridge": "^7.4",
        "symfony/stopwatch": "7.4.*",
        "symfony/web-profiler-bundle": "7.4.*",
        "symplify/easy-coding-standard": "^13.0",
        "symplify/phpstan-rules": "^14.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "tbachert/spi": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Infrastructure/Component/OpenTelemetry/register.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "pre-command-run": [
            "@putenv OTEL_PHP_AUTOLOAD_ENABLED=false"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "quality": [
            "composer validate --strict",
            "vendor/bin/phpstan analyse --memory-limit=-1",
            "vendor/bin/ecs check",
            "vendor/bin/phparkitect check --config=tests/Architecture/arkitect.php"
        ],
        "test": [
            "bin/phpunit"
        ],
        "test-unit": [
            "bin/phpunit --testsuite Unit"
        ],
        "test-integration": [
            "bin/phpunit --testsuite Integration"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    }
}
